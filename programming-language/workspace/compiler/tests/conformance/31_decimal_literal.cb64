# Test DecimalLiteral type inference
# DecimalLiteral adapts to Fixed when used with Fixed operands,
# otherwise defaults to Float.

def main():
    # Test: DecimalLiteral assigned to fixed
    fx1: fixed = 1.5
    println(fx1)  # Expected: 1.5

    # Test: Fixed + DecimalLiteral stays fixed
    fx2: fixed = fx1 + 0.5
    println(fx2)  # Expected: 2.0

    # Test: DecimalLiteral + Fixed stays fixed
    fx3: fixed = 0.25 + fx1
    println(fx3)  # Expected: 1.75

    # Test: DecimalLiteral assigned to float
    fl1: float = 2.5
    println(fl1)  # Expected: 2.5

    # Test: Float + DecimalLiteral stays float
    fl2: float = fl1 + 0.5
    println(fl2)  # Expected: 3.0

    # Test: Explicit fixed() cast for DecimalLiteral
    fx4: fixed = fixed(3.0)
    println(fx4)  # Expected: 3.0

    # Test: Fixed arithmetic chain with DecimalLiterals
    fx5: fixed = fx1 + 0.25 + 0.25
    println(fx5)  # Expected: 2.0

    println("DONE")
