#
# This test stays within safe nesting limits.

def main():
    x: byte = 5

    # Safe: 3-4 levels of nesting
    if x > 0:
        if x > 1:
            if x > 2:
                println("DEEP OK")

    # Loop nesting also limited
    i: byte = 2
    while i > 0:
        j: byte = 2
        while j > 0:
            println(i)
            j = j - 1
        i = i - 1
